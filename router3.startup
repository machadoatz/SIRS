ifconfig eth0 5.4.3.254/24 up
ifconfig eth1 6.6.6.2/24 up
ip route add 0.0.0.0/0 via 6.6.6.1

# OPENVPN
#openvpn ~/client.conf &

# FIREWALL
iptables --policy FORWARD DROP

# allow all ssh web and mail
iptables -A FORWARD -s 5.4.3.0/24 -d 1.2.4.55 -i eth0 -p TCP --dport ssh -j ACCEPT
iptables -A FORWARD -s 5.4.3.0/24 -d 1.2.3.0/24 -i eth0 -p TCP --dport ssh -j ACCEPT
iptables -A FORWARD -s 5.4.3.0/24 -i eth0 -j ACCEPT -p TCP --dport 80 
iptables -A FORWARD -s 5.4.3.0/24 -i eth0 -j ACCEPT -p TCP --dport 587
iptables -A FORWARD -d 5.4.3.0/24 -o eth0 -j ACCEPT -p TCP --sport 80 
iptables -A FORWARD -d 5.4.3.0/24 -o eth0 -j ACCEPT -p TCP --sport 587
iptables -A FORWARD -d 5.4.3.0/24 -o eth0 -j ACCEPT -p TCP --sport 22
#--match multiport --sports 22,80,587

#ICMP
iptables -A FORWARD -s 5.4.3.0/24 -i eth0 -j ACCEPT -p ICMP -d 1.2.0.0/20
iptables -A FORWARD -s 1.2.0.0/20 -i tun0 -j ACCEPT -p ICMP -d 5.4.3.0/24
#tun0 pode dar problemas porque apenas existe depois de correr a VPN
